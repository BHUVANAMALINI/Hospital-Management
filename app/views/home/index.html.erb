<div class="main_container" ng-controller="homeController">
	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <a class="navbar-brand" href="#">Hospital Management</a>
	    </div>
	    <ul class="nav navbar-nav navbar-right">
	      <li>
	      	<%= link_to('Logout', destroy_user_session_path, method: :delete) %>
	      </li>
	    </ul>
	  </div>
	</nav>
	<div class="row">
		<div class="col-md-6 index_tile patient_tile height_fix">
			<div align="center">
				<h4>PATIENT</h4>
				<hr>
			</div>
			<div align="center">
				<input class="form-control" id="materialFormSubscriptionEmailEx" placeholder="Name" ng-model="patient.name" /><br/>
				<input class="form-control" id="materialFormSubscriptionEmailEx" placeholder="Phone Number" ng-model="patient.number"/><br/>
				<button type="button" class="btn btn-warning" ng-click="createPatient(patient)">Submit</button>
			</div>
		</div>
		<div class="col-md-6 index_tile">
			<div align="center">
				<h4>Doctor</h4>
				<hr>
			</div>
			<div align="center">
				<input class="form-control" id="materialFormSubscriptionEmailEx" placeholder="Name" ng-model="doctor.name"/><br/>
				<input class="form-control" id="materialFormSubscriptionEmailEx" placeholder="Phone Number" ng-model="doctor.number"/><br/>
				<input class="form-control" id="materialFormSubscriptionEmailEx" placeholder="Specialization" ng-model="doctor.specialization"/><br/>
				<button type="button" class="btn btn-warning" ng-click="createDoctor(doctor)">Submit</button>
			</div>
		</div>
		<div class="col-md-6 index_tile">
			<div align="center">
				<h4>APPOINTMENT</h4>
				<hr>
			</div>
			<div align="center">
				<select ng-model="appointment.doctor_name" class="form-control" id="materialFormSubscriptionEmailEx">
					<option value="">Doctor Name</option>
					<option value="{{all_doctor.name}}" ng-repeat="all_doctor in all_doctors">{{all_doctor.name}}</option>
				</select><br/>
				<select ng-model="appointment.patient_name" class="form-control" id="materialFormSubscriptionEmailEx">
					<option value="">Patient Name</option>
					<option value="{{all_patient.name}}" ng-repeat="all_patient in all_patients">{{all_patient.name}}</option>
				</select><br/>
				<input class="form-control" id="materialFormSubscriptionEmailEx" placeholder="Disease" ng-model="appointment.disease"/><br/>
				<button type="button" class="btn btn-warning" ng-click="createAppointment(appointment)">Submit</button>
			</div>
		</div>
		<div class="col-md-6 index_tile patient_tile">
			<div align="center">
				<h4>VIEW APPOINTMENT</h4>
				<hr>
			</div>
			<div align="center">
				<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Doctor Name</th>
							<th>Patient Name</th>
							<th>Disease</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="all_appointment in all_appointments" ng-if="all_appointments">
							<td>{{all_appointment.doctor_name}}</td>
							<td>{{all_appointment.patient_name}}</td>
							<td>{{all_appointment.disease}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<script>
var json = {
	"all_patients": <%= @all_patients.to_json.html_safe%>,
	"all_doctors": <%= @all_doctors.to_json.html_safe%>,
	"all_appointments": <%= @all_appointments.to_json.html_safe%>
}	
</script>


